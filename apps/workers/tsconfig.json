  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/index.ts",
    "src/rssIngestor.ts",
    "src/utils/**/*.ts"
  ]
}